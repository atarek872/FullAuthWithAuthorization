@using DynamicRoleBasedAuthorization.ViewModels
@model EditUserRolesViewModel

<h2>Edit Roles for @Model.Username</h2>

<form asp-action="EditRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            var role = Model.Roles[i];
            <div class="form-check">
                <!-- Correct binding to the IsSelected property -->
                <input class="form-check-input" type="checkbox" name="Roles[@i].IsSelected" value="true" checked="@role.IsSelected" />
                <label class="form-check-label">@role.RoleName</label>
                <input type="hidden" name="Roles[@i].RoleName" value="@role.RoleName" />
            </div>
        }
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>
