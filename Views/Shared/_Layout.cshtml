<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="~/img/favicon.png" type="image/x-icon">
    <title>@ViewData["Title"] - MetaVids</title>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1342808464294946"
            crossorigin="anonymous"></script>
    @RenderSection("Styles", required: false)

</head>
<body>
    <div id="preloader">
        <div id="ctn-preloader" class="ctn-preloader">
            <div class="animation-preloader">
                <div class="spinner"></div>
                <div class="txt-loading">
                    <span data-text-preloader="M" class="letters-loading">
                        M
                    </span>
                    <span data-text-preloader="E" class="letters-loading">
                        E
                    </span>
                    <span data-text-preloader="T" class="letters-loading">
                        T
                    </span>
                    <span data-text-preloader="A" class="letters-loading">
                        A
                    </span>
                    <span data-text-preloader="V" class="letters-loading">
                        V
                    </span>
                    <span data-text-preloader="I" class="letters-loading">
                        I
                    </span>
                    <span data-text-preloader="D" class="letters-loading">
                        D
                    </span>
                    <span data-text-preloader="S" class="letters-loading">
                        S
                    </span>
                </div>
                <p class="text-center">Loading</p>
            </div>
            <div class="loader">
                <div class="row">
                    <div class="col-3 loader-section section-left">
                        <div class="bg"></div>
                    </div>
                    <div class="col-3 loader-section section-left">
                        <div class="bg"></div>
                    </div>
                    <div class="col-3 loader-section section-right">
                        <div class="bg"></div>
                    </div>
                    <div class="col-3 loader-section section-right">
                        <div class="bg"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="body_wrapper">

        <header class="header_area">
            <nav class="navbar navbar-expand-lg menu_one">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#"><img src="~/img/logo.png" srcset="~/img/logo2x.png 2x" alt="logo"></a>
                    <a class="btn_get btn_hover mobile_btn ml-auto" href="#get-app">Get Started</a>
                    <button class="navbar-toggler collapsed" type="button" data-toggle="collapse"
                            data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="menu_toggle">
                            <span class="hamburger">
                                <span></span>
                                <span></span>
                                <span></span>
                            </span>
                            <span class="hamburger-cross">
                                <span></span>
                                <span></span>
                            </span>
                        </span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav m-auto menu">
                            <li class="nav-item dropdown submenu mega_menu mega_menu_two active">
                                <a class="nav-link dropdown-toggle" asp-controller="Home" asp-action="Index">
                                    Home
                                </a>

                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {

                                <li class="nav-item dropdown submenu mega_menu mega_menu_two active">
                                    <a class="nav-link dropdown-toggle" asp-controller="MetaVideos" asp-action="ListVids">
                                        Watch and Earn
                                    </a>

                                </li>
                                <li class="nav-item dropdown submenu mega_menu mega_menu_two active">
                                    <a class="nav-link dropdown-toggle" asp-controller="MetaVideos" asp-action="CreateNewVideos">
                                        Start Your Business
                                    </a>

                                </li>


                            }
                            <li class="nav-item dropdown submenu mega_menu mega_menu_two active">
                                <a class="nav-link dropdown-toggle" asp-controller="Home" asp-action="About">
                                    About
                                </a>

                            </li>
                            <li class="nav-item dropdown submenu mega_menu mega_menu_two active">
                                <a class="nav-link dropdown-toggle" asp-controller="Home" asp-action="Privacy">
                                    Privacy
                                </a>

                            </li>
                        </ul>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="tracking_btn">
                                <a class="er_btn btn_hover" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </div>
                        }
                        else
                        {
                            <div class="tracking_btn">
                                <a class="er_btn btn_hover" asp-area="" asp-controller="Account" asp-action="Login" style="margin-right: 10px;">Login</a>
                            </div>
                            <div class="tracking_btn">
                                <a class="er_btn btn_hover" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </div>
                        }

                    </div>
                </div>
            </nav>
        </header>


        @RenderBody()




        <footer class="footer_area h_footer_dark pos_footer_area h_footer_track">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-6">
                        <div class="f_widget dark_widget company_widget">
                            <a href="index.html" class="f-logo"><img src="~/img/logo2.png" alt=""></a>
                            <p>© 2022 MetaVids, EG. All rights reserved. Proudly made in EG</p>
